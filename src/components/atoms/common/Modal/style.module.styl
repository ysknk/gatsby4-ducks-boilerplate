@import '../../../../styles/config'

.modal
  overflow auto
  position fixed
  top 0
  left 0
  z-index 9999
  width 100%
  height 100%
  background rgba(0, 0, 0, .5)
  text-align center
  &::before
    display inline-block
    content ''
    width 0
    height 100%
    vertical-align middle

  &_outer
    display inline-block
    width 50%
    vertical-align middle

  &_inner
    box-sizing border-box
    position relative
    width 100%
    padding 1em
    border solid 3px #000
    background #fff

  &_container
    text-align left

  &_close
    display block
    position absolute
    top 0
    right 0
    width 2em
    z-index 1
    span
      box-sizing border-box
      border 3px solid #000
      background #000
      display block
      width 100%
      height 0
      padding-top calc(100% - 6px)
      &::before,
      &::after
        position absolute
        top 50%
        left 50%
        display block
        content ''
        width 100%
        height 3px
        background #fff
      &::before
        transform translate(-50%, -50%) rotate(45deg)
      &::after
        transform translate(-50%, -50%) rotate(-45deg)

  &_content
    position relative
    top 0
    left 0
    display block

